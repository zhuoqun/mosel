      <div class="signin">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <form class="form-horizontal signin-form">
              <div class="form-group">
                <label for="email" class="col-sm-4 control-label">Email</label>
                <div class="col-sm-8">
                  <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
              </div>
              <div class="form-group">
                <label for="password" class="col-sm-4 control-label">Password</label>
                <div class="col-sm-8">
                  <input type="password" class="form-control" id="password" placeholder="Password">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox"> Remember me
                    </label>
                  </div>
                  <a class="forgot" href="">Forgot password?</a>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                  <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
              </div>
            </form>

            <div class="oauth">
              <div class="row">
                <div class="col-sm-4">
                  <p>Sign in using</p>
                </div>
                <div class="col-sm-8">
                  <a class="evernote" href="">Evernote</a>
                  <a class="amazon" href="">Amazon</a>
                  <a class="facebook" href="">Facebook</a>
                  <a class="twitter" href="">Twitter</a>
                  <a class="google" href="">Google</a>
                  <a class="douban" href="">Douban</a>
                  <a class="weibo" href="">Weibo</a>
                </div>
              </div>
            </div>

            <div class="no-account">
              <p>Don't have an account? <a href="/user/signup">Sign up for free!</a></p>
            </div>

          </div>
        </div>
      </div>
