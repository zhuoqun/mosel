      <div class="signup">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <%= form_for @user, :url => users_path, :html => {:class => 'form-horizontal signin-form'} do |f| %>
              <div class="form-group">
                <%= f.label :email, t('user.email'), :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                  <%= f.text_field :email, :class => 'form-control', :placeholder =>  t('user.email') %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password, t('user.password'), :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                  <%= f.password_field :password, :class => 'form-control', :placeholder =>  t('user.password') %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, t('user.password_confirmation'), :class => 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                  <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder =>  t('user.password_confirmation') %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                  <%= submit_tag t('user.signup'), :class => 'btn btn-primary' %>
                </div>
              </div>
            <% end %>

            <div class="signin">
              <p><%= t('user.signin_slogan', :link => link_to(t('user.link_in_signin_slogan'), users_signin_path)).html_safe %></p>
            </div>
          </div>
        </div>
      </div>
